<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <EditText
        android:id="@+id/create_dialog_topic_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding_half_small"
        android:layout_marginEnd="@dimen/padding_half_small"
        android:layout_marginStart="@dimen/padding_half_small"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:hint="@string/topic_name"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_half_small"/>

    <Spinner
        android:id="@+id/create_dialog_topic_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding_half_small"
        android:layout_marginEnd="@dimen/padding_half_small"
        android:layout_marginStart="@dimen/padding_half_small"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:entries="@array/topic_types">

    </Spinner>

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_half_small"/>

    <Spinner
        android:id="@+id/create_dialog_topic_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding_half_small"
        android:layout_marginEnd="@dimen/padding_half_small"
        android:layout_marginStart="@dimen/padding_half_small"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:entries="@array/topic_categories">

    </Spinner>
</LinearLayout>